{
  "window.commandCenter": true,
  "workbench.activityBar.orientation": "vertical",
  "editor.fontFamily": "MesloLGS NF",
  "editor.fontSize": 16,
  "editor.fontLigatures": true,
  "editor.tabSize": 2,
  "editor.minimap.enabled": false,
  "workbench.sideBar.location": "left",
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.suggestOnTriggerCharacters": true,
  "editor.snippetSuggestions": "top",
  "editor.suggestSelection": "first",
  "editor.linkedEditing": true,
  "editor.occurrencesHighlight": "off",
  "editor.selectionHighlight": false,
  "editor.tabCompletion": "on",
  "editor.quickSuggestions": {
    "other": true,
    "comments": false,
    "strings": true
  },
  "files.trimTrailingWhitespace": true,
  "editor.bracketPairColorization.independentColorPoolPerBracketType": true,
  "editor.guides.bracketPairs": "active",
  "editor.formatOnSave": true,
  "editor.smoothScrolling": true,
  "editor.suggest.showWords": false,
  "terminal.integrated.fontFamily": "MesloLGS NF",
  "terminal.integrated.defaultProfile.linux": "zsh",
  "typescript.updateImportsOnFileMove.enabled": "always",

  //  Cursor
  "editor.cursorBlinking": "smooth",
  "editor.cursorStyle": "line",
  "editor.cursorWidth": 1,
  "editor.cursorSmoothCaretAnimation": "on",

  // Linha lateral
  "editor.rulers": [80, 120],

  // Breadcrumb
  "breadcrumbs.enabled": true,

  // Git
  "git.ignoreMissingGitWarning": true,
  "git.autofetch": true,
  "git.openRepositoryInParentFolders": "always",
  "git.enableSmartCommit": true,

  // Linting
  "eslint.alwaysShowStatus": true,
  "eslint.validate": [
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact",
    "svelte"
  ],
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": "explicit"
  },

  // Files
  "files.autoSave": "onFocusChange",

  // Exploração de arquivos
  "explorer.confirmDelete": false,
  "explorer.confirmPasteNative": false,
  "explorer.sortOrder": "filesFirst",
  "explorer.compactFolders": false,
  "explorer.confirmDragAndDrop": false,
  "workbench.tree.indent": 12,

  // Aparência
  "window.titleBarStyle": "custom",
  "window.menuBarVisibility": "compact",
  "workbench.editor.labelFormat": "short",
  // Cor das pastas no material-icon-theme
  "material-icon-theme.folders.color": "#43a047",

  // Segurança
  "security.workspace.trust.untrustedFiles": "open",

  // Extensões
  "extensions.ignoreRecommendations": false,
  "extensions.autoUpdate": true,

  // Svelte
  "svelte.enable-ts-plugin": true,
  "svelte.plugin.typescript.diagnostics.enable": true,
  "svelte.plugin.css.diagnostics.enable": true,
  "svelte.plugin.css.completions.enable": true,

  // Tailwind CSS
  "tailwindCSS.includeLanguages": {
    "svelte": "html"
  },
  "tailwindCSS.emmetCompletions": true,

  // Emmet
  "emmet.includeLanguages": {
    "svelte": "html"
  },

  // Temas de ícones
  "workbench.iconTheme": "material-icon-theme",
  "continue.enableTabAutocomplete": true,
  "git.confirmSync": false,
  "terminal.integrated.env.linux": {},
  "gitlens.ai.experimental.model": "openai:gpt-4o",
  "diffEditor.hideUnchangedRegions.enabled": true
}
